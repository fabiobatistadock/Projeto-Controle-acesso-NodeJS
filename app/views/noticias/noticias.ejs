<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Notícias</title>
</head>
<body>

		<h1>Notícias</h1>

		<table>
			
			<tr>
				<td><b>ID</b></td>
				<td><b>Título da Notícia</b></td>
				<td><b>Resumo da Notícia</b></td>
				<td><b>Autor (a)</b></td>
				<td><b>Notícia</b></td>
				<td><b>Data da Notícia</b></td>
			</tr>
			<% for(var i = 0; i < noticias.length; i++){ %>
				<tr>
					<td><%= noticias[i].id_noticia %></td>
					<td><%= noticias[i].titulo %></td>
					<td><%= noticias[i].resumo %></td>
					<td><%= noticias[i].autor %></td>
					<td><%= noticias[i].noticia %></td>
					<td><%= noticias[i].data_noticia %></td>
				</tr>
			<% } %>

		</table>
	</body>
</html>